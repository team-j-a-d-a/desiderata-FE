{{#each lists as |list|}}
  {{log list}}
  <section data-id="{{list.id}}">
  <div class=activityBox>
    <h6>Title:</h6>
      <div>
        <p>
          {{#if list.title}}
            {{list.title}}
          {{else}}
            No title provided
          {{/if}}
        </p>
      </div>
    </div>

  <div class=activityBox>
    <h6>ID:</h6>
      <div>
        <p>
        {{#if list.id}}
          {{list.id}}
        {{else}}
          No id provided.
        {{/if}}
      </p>
    </div>
  </div>

  <div class=activityBox>
    <h6>Description:</h6>
    <div>
      <p>
        {{#if list.description}}
          {{list.description}}
        {{else}}
          No description provided
        {{/if}}
      </p>
    </div>
  </div>

  <div class=activityBox>
    <h6>Completed:</h6>
    <div>
      <p>
        {{#if list.status=true}}
          <p class="list-true">
            {{list.status}}
          </p>
        {{else}}
        <p class="list-false">
          {{list.status}}
        </p>
      </p>
    </div>
  </div>

</section>

<!-- Activity PATCH update -->
    <h6>Update Activity</h6>
      <div class="message-box"></div>
        <form class="update-form" data-id="{{activity.id}}">
          <input name="activity[title]" value="" type="text" placeholder='Title' data-id="{{activity.id}}" required>

          <input name="activity[description]" value="" type="text" placeholder='Description' data-id="{{activity.id}}" required>

          <input name="activity[completed]" value="" type="boolean" placeholder='Completed' data-id="{{activity.id}}" required>
          <input type="submit" data-id="" class="editButton btn btn-secondary" value="Update Activity">
        </form>

<!-- Activity DELETE destroy -->
      <button type="button" data-id="{{activity.id}}" class="btn btn-danger remove-appliance">Delete Activity</button>

{{/each}}
