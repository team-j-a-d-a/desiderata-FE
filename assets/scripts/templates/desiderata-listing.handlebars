
{{#each activities as |activity|}}
  {{log activity}}
    <section data-id="{{activity.id}}">
        <h6>Title:</h6>
          <div>
            <p>
              {{#if activity.title}}
                {{activity.title}}
              {{else}}
                No title provided
              {{/if}}
            </p>
          </div>

        <h6>ID:</h6>
          <div>
            <p>
            {{#if activity.id}}
              {{activity.id}}
            {{else}}
              No id provided.
            {{/if}}
          </p>
        </div>

        <h6>Description:</h6>
        <div>
          <p>
            {{#if activity.description}}
              {{activity.description}}
            {{else}}
              No description provided
            {{/if}}
          </p>
        </div>

      <h6>Completed:</h6>
      <div>

      </div>
  </section>

<!-- Activity PATCH update -->
    <h6>Update Activity</h6>
      <form class="update-activity" data-id="{{activity.id}}">
        <input name="activity[title]" value="" type="text" placeholder='Title' data-id="{{activity.id}}" required>

        <input name="activity[description]" value="" type="text" placeholder='Description' data-id="{{activity.id}}" required>

        <input name="activity[completed]" value="" type="boolean" placeholder='Completed' data-id="{{activity.id}}" required>
        <input type="submit" data-id="" class="editButton btn btn-secondary" value="Update Activity">
      </form>

<!-- Activity DELETE destroy -->
      <button type="button" data-id="{{activity.id}}" class="btn btn-danger remove-activity">Delete Activity</button>
      {{log activity.description}}
{{/each}}
